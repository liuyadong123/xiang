<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.landingActivity">
    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ddd"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="30dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/ed_phone"
                android:hint="手机号"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="18sp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/login_icon_phone_n_hdpi"
                android:textColorHint="#ffffff"
                android:drawablePadding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/ed_pwd"
                android:hint="登陆密码"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="18sp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/login_icon_lock_n_hdpi"
                android:textColorHint="#ffffff"
                android:inputType="textPassword"
                android:drawablePadding="20dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <CheckBox
                android:id="@+id/cb_eye"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:checked="true"
                android:background="@drawable/login_icon_eye_n_hdhpi"
                android:button="@null"
                />


            <View
                android:layout_width="match_parent"
                android:background="#ffffff"

                android:layout_height="1dp"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="#ffffff"

            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/jz"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/checkeds"
                android:text="记住密码"
                android:paddingLeft="10dp"
                />
            <TextView
                android:id="@+id/tv_zhu"
                android:layout_centerVertical="true"
                android:textColor="#ffffff"
                android:layout_alignParentRight="true"
                android:text="快速注册"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>



    </LinearLayout>
    <TextView
        android:id="@+id/tv_deng"
        android:layout_alignParentBottom="true"
        android:text="登录"
        android:layout_gravity="bottom"
        android:textColor="#ff5f71"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/sp"
        android:layout_marginTop="240dp"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <TextView
        android:id="@+id/tv_qq"
        android:layout_alignParentBottom="true"
        android:text="快速登陆"
        android:layout_gravity="bottom"
        android:textColor="#ff5f71"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/sp"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

</RelativeLayout>