<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="10dp"
        android:padding="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="20dp"
                >
                <TextView
                    android:id="@+id/dingdanhao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="订单号:12345678990"
                    android:layout_alignParentLeft="true"
                    />
                <TextView
                    android:id="@+id/shijian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="2019年2月28"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/jirv"
                android:layout_width="match_parent"
                android:layout_weight="6"
                android:layout_height="0dp">
            </android.support.v7.widget.RecyclerView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_height="0dp">

                <TextView
                    android:id="@+id/paijian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="圆通"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="20dp"
                    android:textColor="#f01"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:id="@+id/tijiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/duoshao"
                    android:layout_alignParentRight="true"
                    android:textColor="#fff"
                    android:background="#f01"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_centerVertical="true"
                    android:text="确认收货"
                    android:gravity="center"
                    android:textSize="20dp"
                    />
                <TextView
                    android:id="@+id/danhao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/paijian"
                    android:text="快递单号"
                    android:gravity="center"
                    android:textSize="20dp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>